<div class="all">
  <div class="total">
    <div>
      articles:
    </div>
    <div class="count">
      <%= Article.all.where("author_id =?", current_user.id).count %>
    </div>
  </div>
  <div class="articles">
    <% Article.all.each do |article| %>
    <div class="article-container">
      <div class="article-row">
        <div>
          <%= image_tag Group.find(article.group_id).icon.url(:medium), :class => 'article-icon' %>
        </div>
        <div class="article-second">
        <div class="profile-name">
          <h3><%= User.find(article.author_id).name %></h3>
          <h3><%= User.find(article.author_id).username %><%= article.created_at.strftime(" â€¢ %kh") %></h3>
        </div>
          
          <div class="article-body-height">
            <%= link_to article.body , article_path(article), :class => 'article-body'%>
          </div>
          <div class="hash-tag">
            <span>#</span><%= link_to Group.find(article.group_id).name, group_path(article.group_id) %>
          </div>
          <div class="like-retweet">
            <button><i class="fa fa-comment"></i></button>
            <button><i class="fa fa-heart"></i></button>
            <button><i class="fa fa-retweet"></i></button>
            <button><i class="fa fa-share-alt"></i></button>
          </div>
        </div>
      </div>
    </div>
    <% end %><br>
  </div>
  <%= link_to "+", new_article_path, class: "new-article" %>
</div>