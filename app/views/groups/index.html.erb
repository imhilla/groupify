<div id="mySidebar" class="sidebar">
  <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
  <div class="sidebar-content">
    <%= User.where("id =?", current_user.id).find_each do |user| %>
    <%= image_tag user.image.url(:medium), :class => 'sidebar-image' %>
    <h2><%= user.name %><br></h2>
    <h3><%= user.username %><br></h3>
    <% end %>
  </div>
  <div class="side-bar-links">
    <%= User.where("id =?", current_user.id).find_each do |user| %>
        <%= link_to 'Profile', user_path(user.id), :class => 'side-link1' %>
    <% end %>
    <%= link_to 'Feed', articles_path, :class => 'side-link2' %>
    <%= link_to 'External', externals_path, :class => 'side-link2' %>
    <%= link_to 'All groups', groups_path, :class => 'side-link3' %>
  </div>
</div>

<div class="main">
  <button class="openbtn" onclick="openNav()">â˜°</button>
  <h2>G</h2>
  <i class="fa fa-search"></i>
</div>

<div class="all-groups">
  <div class="groups">
    <% @groupalp.each do |group| %>
    <div class="group-items">
      <div>
        <%= image_tag group.icon.url(:medium), :class => 'group-image' %>
      </div>
      <div class="group-description">
        <%= link_to group.name.capitalize, group_path(group) %>
        <div class="created">
          <%= group.created_at.strftime("%d %b %Y") %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <%= link_to "Create New", new_group_path, class: "button btn" %>
</div>