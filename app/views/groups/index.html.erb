<div class="all-groups">
  <div class="groups">
    <% @groupalp.each do |group| %>
    <div class="group-items">
      <div>
        <%= image_tag group.icon.url(:medium), :class => 'group-image' %>
      </div>
      <div class="group-description">
        <%= link_to group.name.capitalize, group_path(group) %>
        <div>
          Created at
          <%= group.created_at.strftime("%Y-%m-%d") %>
        </div>
      </div>
    </div>

    <% end %>
  </div>

  <%= link_to "Create a New", new_group_path, class: "button btn" %>
</div>