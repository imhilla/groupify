<div id="mySidebar" class="sidebar">
  <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
  <div class="sidebar-content">
    <%= User.where("id =?", current_user.id).find_each do |user| %>
    <%= image_tag user.image.url(:medium), :class => 'sidebar-image' %>
    <h2><%= user.name %><br></h2>
    <h3><%= user.username %><br></h3>
    <% end %>
  </div>
  <div class="side-bar-links">
    <%= User.where("id =?", current_user.id).find_each do |user| %>
        <%= link_to 'Profile', user_path(user.id), :class => 'side-link1' %>
    <% end %>
    <%= link_to 'Feed', articles_path, :class => 'side-link2' %>
    <%= link_to 'External', externals_path, :class => 'side-link2' %>
    <%= link_to 'All groups', groups_path, :class => 'side-link3' %>
  </div>

</div>

<div class="main">
  <button class="openbtn" onclick="openNav()">â˜°</button>
  <h2>G</h2>
  <i class="fa fa-search"></i>
</div>

<div class="article-show">
  <h1><%= @article.title %></h1>
  <p><%= @article.body %></p>
  <h3>Comments</h3>
  <%= render partial: 'articles/comment', collection: @article.comments %>
  <%= button_to 'Like', article_likes_path(@article), method: :post %>
  <%= render partial: 'comments/form' %>

  <%= link_to "Back", articles_path, :class => 'btn' %>
</div>