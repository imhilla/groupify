<%= render './users/sidebar' %>

<div class="main">
  <button class="openbtn" onclick="openNav()">â˜°</button>
  <h2>DETAILS</h2>
  <i class="fa fa-search"></i>
</div>

<div class="article-show">
  <div class="articles-show">
      <% if @article.group_id.present? %>
    <%= image_tag Group.find(@article.group_id).icon.url(:medium), :class => 'article-icon' %>
    <% end %>
    <h1><%= @article.title %></h1>
  </div>
  <p><%= @article.body %></p>
  <div class="like-comment">
    <div class="article-like-show d-flex">
      <%= button_to 'like', article_likes_path(@article), method: :post, :class => 'like-button-comment btn-xs' %>
      <%= pluralize(@article.likes.count, "like") %>
    </div>
    <div class="article-like-comment d-flex">
      <%= button_to 'comment', new_article_comment_path(@article), method: :get, :class => 'like-button-comment btn-xs' %>
      <%= pluralize(@article.comments.count, "comment") %></div>
  </div>
  <%= render partial: 'articles/comment', collection: @article.comments %>
  <%= link_to "Back", articles_path, :class => 'btn' %>
</div>